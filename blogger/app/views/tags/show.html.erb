<h1>Articles tagged with <%= @tag.name %></h1>

<ul>
	<% @tag.articles.each do |article| %>
	<%= link_to article.title, article_path(article) %>
	<% end %>
</ul>

<%= link_to "Delete this tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete this article?"} %>
<%= link_to "Back to articles page", articles_path %>
<%= link_to "List of all tags", tags_path %>